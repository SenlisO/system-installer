from sys import argv, stderr
argc = len(argv)
VERSION = "0.9.6-alpha10"
HELP = "\nsystem-installer, Version %s\n\n\t-h, --help\tprint this help dialoge.\n\t-v, --version\tprint current version.\n\nPass nothing to start installer.\n"
R = "\033[0;31m"
G = "\033[0;32m"
Y = "\033[1;33m"
NC = "\033[0m"
def eprint(args, *kwargs, COLOR = R):
	print(COLOR, file=stderr, end="")
	print(args, file=stderr, *kwargs, end="")
	print(NC, file=stderr)

if (argc > 1):
	if (argv[1] == "-v" or argv[1] == "--version"):
		print("\n%s\n" % (VERSION))
	elif (argv[1] == "-h" or argv[1] == "--help"):
		print(HELP % (VERSION))
	else:
		eprint("Option %s not recognized." % (argv[1]))
		eprint(HELP % (VERSION), COLOR=NC)
else:
	from os import system
	system("/usr/bin/xhost +si:localuser:root")
	print(Y + "RUNNING LOG LOCATED AT /tmp/system-installer.log" + NC)
	system("/usr/bin/pkexec /usr/share/system-installer/engine.sh 2>/tmp/system-installer.log")
	system("/usr/bin/xhost -si:localuser:root")
